<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Event Name' %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="field" >
    <%= f.label :guestlist %><br>
    <div id="guestlist">
      <%= text_field_tag 'event[guestlist][]', placeholder: ("Guest email"), :class => "form-control" %>
    </div>
    <a id="addguest">Add a guest</a>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <div class="bfh-datepicker" id="event_date">
      <%= f.text_field :date %>
    </div>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <div class="bfh-timepicker" id="event_time">
      <%= f.text_field :time %>
    </div>
  </div>

  <div class="field">
    <%= f.label :owner %><br>
    <%= f.text_field :owner, placeholder: ("Your email"), :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
